<div class="modal fade" id="addBeer" ng-controller="AllController as all">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 class="modal-title">Add Beer</h4>
        </div>

  <div class="modal-body">

    <form class="add-beer" ng-submit='all.createBeer()'>
        <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input class="form-control" ng-model="all.newBeer.name" id="new-Beer-Name" placeholder="Name">
        </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Kind</label>
      <input class="form-control" ng-model="all.newBeer.kind" id="new-Beer-Kind" placeholder="Kind">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Style</label>
      <input class="form-control" ng-model="all.newBeer.style" id="new-Beer-style" placeholder="Style">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Image</label>
      <input id="beer-image" type="hidden" role="uploadcare-uploader" data-crop="disabled" />
      </div>
      <div>
          <input type="submit" value="Add Beer">
      </div>
    </form>
  </div>
        <div class="modal-footer">
          <a href="#" data-dismiss="modal" class="btn">Close</a>
        </div>


      </div>
    </div>
</div>

<div class="modal fade" id="addEvent" ng-controller="EventController as event">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 class="modal-title">Add Event</h4>
        </div>

  <div class="modal-body">

    <form class="add-beer" ng-submit='event.createEvent()'>
        <div class="form-group">
        <label for="">Host</label>
        <input class="form-control" ng-model="event.newEvent.host" id="new-Event-Host" placeholder="Your Name">
        </div>
      <div class="form-group">
        <label for="">Location</label>
      <input class="form-control" ng-model="event.newEvent.location" id="new-Event-Location" placeholder="Location">
      </div>
      <div class="form-group">
        <label for="">Date</label>
      <input type="date" class="form-control" ng-model="event.newEvent.date" id="new-Event-Date" placeholder="Date">
      </div>
      <div>
          <input type="submit" value="Add Event">
      </div>
    </form>
  </div>
        <div class="modal-footer">
          <a href="#" data-dismiss="modal" class="btn">Close</a>
        </div>


      </div>
    </div>
</div>





